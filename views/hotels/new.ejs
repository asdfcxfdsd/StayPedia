<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Hotels</h1>
    <div class="col-6 offset-3">
        <!-- we use novalidate to the form, which will help us disable the build-in feature of HTML.  -->
        <!-- Validate the form with boosTrap validation -->
        <!-- Set the type to multipart/form-data, then we use multer to parse our Image data. -->
        <form action="/hotels" method="POST" novalidate class="validation-form" enctype='multipart/form-data' >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control " type="text" id="title" name="hotel[title]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotel[location]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="customFile">Default file input example</label>
                <input type="file" name="image" class="form-control" id="customFile" multiple/>
            </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hotel[image]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div> -->

            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hotel[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                </div>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="hotel[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Hotel</button>
            </div>
        </form>
        <a href="/hotels">All Hotels</a>
    </div>
</div>


