<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <!-- edit form , ?_method = put -->
        <!-- implement validation method with boostrap -->
        <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST" novalidate class="validation-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hotel[title]"
                    value="<%=hotel.title %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotel[location]"
                    value="<%=hotel.location %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
            </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hotel[image]"
                    value="<%=hotel.image %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
            </div> -->

            <div class="mb-3">
                <label class="form-label" for="customFile">Add More Images</label>
                <input type="file" name="image" class="form-control" id="image" multiple/>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Hotel Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hotel[price]" value="<%=hotel.price %>" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="hotel[description]" required><%= hotel.description%></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
            </div>

            <!-- delete any images we want  -->
            <div class="mb-3">
                <% hotel.images.forEach((img, i) => { %>
                    <img src="<%=img.thumbnail %>" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename  %>">
                        <label for="image-<%=i%>">Delete?</label>
                    </div>
                <% }) %>
            </div>


            <div class="mb-3">
                <button class="btn btn-info">Update Hotel</button>
            </div>
        </form>
        <a href="/hotels/<%= hotel._id%>">Back To Hotel</a>

    </div>
</div>