  <div class="row">
    <h3 class="mt-5 mb-4">Popular hotels</h3>
    <% for(let hotel of hotelsWithPhotos) { %>
    <div class="col-4 col-12 col-md-6 col-lg-4 mb-4">
      <div class="card" style="width: 18rem">
        <img src="<%=hotel.imageUrl  %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%=hotel.hotel.name%></h5>
          <p class="card-text">
            <%=hotel.hotel.vicinity%>
          </p>
          <a href="/hotels/<%=hotel.hotel.place_id
            %>" class="btn btn-primary">See More</a> 
        </div>
      </div>
    </div>
    <% } %>
  </div>

  
  <div class="row">
    <% for(let hotel of hotelsFromMongo) { %>
    <div class="col col-12 col-md-6 col-lg-4 mb-3">
      <div class="card" style="width: 18rem">
        <img
          class="card-img-top"
          src="https://images.unsplash.com/photo-1518602164578-cd0074062767?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxjb2xsZWN0aW9uLXBhZ2V8MXw0ODMyNTF8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1600&q=60"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title text-primary"><%=hotel.title %></h5>
          <p class="card-text"><%=hotel.location %></p>
        </div>
        <div class="d-flex justify-content-around mb-3">
          <h3>$ <%=hotel.price %> / night</h3>
          <a href="/hotels/<%=hotel._id  %>" class="btn btn-primary"
            >See More</a 
          >
        </div>
      </div>
    </div>

    <% } %>
  </div>
